{
    "name": "filisko/pdo-plus",
    "description": "PDO plus extends PDO to allow you to see all your executed queries. It also includes a Bar Panel for Tracy",
    "keywords": ["pdo", "logging", "queries", "tracy"],
    "type": "package",
    "license": "MIT",
    "autoload": {
        "psr-4": {"Filisko\\PDOplus\\": "src/"}
    },
    "suggest": {
        "jdorn/sql-formatter": "Highlight the SQL logged queries",
        "tracy/tracy": "Install Tracy if you want to use the provided Bar Panel to see the logged queries"
    },
    "authors": [
        {
            "name": "Filis Futsarov",
            "email": "filisfutsarov@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpspec/prophecy": "^1.10",
        "symfony/var-dumper": "^5.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "test": "php ./vendor/bin/phpunit"
    }
}
